{
  "name": "clinicpro",
  "version": "2.0.0",
  "description": "Professional Clinic Management System",
  "main": "src/app.js",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost",
    "build": "npm run build:css && npm run build:js && npm run build:html",
    "build:css": "postcss src/assets/styles/main.css -o dist/assets/styles/main.min.css",
    "build:js": "webpack --mode=production",
    "build:html": "html-minifier --input-dir src --output-dir dist --file-ext html --collapse-whitespace --remove-comments --minify-css --minify-js",
    "lint": "eslint src/**/*.js",
    "test": "jest",
    "deploy": "gh-pages -d dist",
    "pwa:generate-icons": "pwa-asset-generator public/icon.png public/icons",
    "pwa:generate-manifest": "pwa-manifest-generator --output public/manifest.json"
  },
  "keywords": [
    "clinic",
    "management",
    "medical",
    "healthcare",
    "saas"
  ],
  "author": "ClinicPro Team",
  "license": "MIT",
  "dependencies": {
    "chart.js": "^4.4.0",
    "luxon": "^3.3.0",
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "eslint": "^8.54.0",
    "gh-pages": "^6.0.0",
    "html-minifier": "^4.0.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "pwa-asset-generator": "^6.3.1",
    "pwa-manifest-generator": "^1.1.5",
    "tailwindcss": "^3.3.6",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ]
}
